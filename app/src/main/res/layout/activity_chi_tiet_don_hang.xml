<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ChiTietDonHang_Activity">
    <FrameLayout
        android:background="#93242A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_back"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/tvdonhang"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết đơn hàng"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/white" />
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:background="@drawable/borderlinear"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/anhsanpham"
                        android:layout_width="198dp"
                        android:layout_height="150dp"
                        android:src="@drawable/background" />
                    <TextView
                        android:id="@+id/tvmaDH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/madh"
                        android:textColor="@color/madh"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:layout_marginLeft="50dp"
                        />
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        />

                </LinearLayout>
                <TextView
                    android:id="@+id/tvtrangThai"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#E30834"
                    android:drawablePadding="5dp"
                    />


                <TextView
                    android:id="@+id/tvtenCuaHang"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên cửa hàng"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_store_24"
                    />
                <TextView
                    android:id="@+id/tvDiaChiCuaHang"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ cửa hàng"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_location_on_24"
                    />
                <TextView
                    android:id="@+id/tvsdtCuaHang"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SĐT cửa hàng"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                    />
                <TextView
                    android:id="@+id/sdtNguoiNhan"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SĐT người nhận"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                    />
                <TextView
                    android:id="@+id/tvDiaChiNguoiNhan"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ người nhận"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_location_on_24"
                    />
                <TextView
                    android:id="@+id/tvtenNguoiNhan"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên người nhận"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/ryctenvasoluong"/>
                <EditText
                    android:id="@+id/edtGhiChu"
                    android:layout_marginLeft="10dp"
                    android:hint="Ghi chú"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:inputType="textMultiLine"/>

                <TextView
                    android:id="@+id/tvTongDon"
                    android:layout_margin="30dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng đơn"
                    android:textSize="25dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_attach_money_24"
                    android:layout_marginRight="5dp"
                    android:gravity="end" />
                <LinearLayout
                    android:id="@+id/lndcdima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnNhanDon"
                        android:visibility="gone"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:text="Nhận đơn"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:background="@drawable/botronbtn"
                        />
                    <Button
                        android:id="@+id/btnTuChoiDon"
                        android:visibility="gone"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:text="Từ chối đơn"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:background="@drawable/botronbtnfail"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="15dp"
                        />
                    <Button
                        android:id="@+id/btnDaLayHang"
                        android:visibility="gone"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:text="Đã lấy hàng"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:background="@drawable/botronbtn"
                        />
                    <Button
                        android:id="@+id/btnHuyDon"
                        android:visibility="gone"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:text="Hủy đơn"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:background="@drawable/botronbtnfail"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="15dp"
                        />
                    <Button
                        android:id="@+id/btnGiaoThanhCong"
                        android:visibility="gone"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:text="Giao thành công"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:background="@drawable/botronbtn"
                        />
                    <Button
                        android:id="@+id/btnGiaoThatBai"
                        android:visibility="gone"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:text="Giao thất bại"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:background="@drawable/botronbtnfail"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="15dp"
                        />
                    <Button
                        android:id="@+id/btnDiGiao"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="50dp"
                        android:text="Đi Giao"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:background="@drawable/botronbtn"
                        />
                    <Button
                        android:id="@+id/btnDaTraTien"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="50dp"
                        android:text="Đã chuyển tiền cho cửa hàng"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:background="@drawable/botronbtn"
                        />
                    <Button
                        android:id="@+id/btnDaTraHang"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="50dp"
                        android:text="Đã trả hàng cho cửa hàng"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:background="@drawable/botronbtn"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>