<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/borderlinear"
    android:id="@+id/lndonhang"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imganhdonhang"
            android:layout_width="80dp"
            android:layout_height="95dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/anhuser" />

        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/maDonHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="@string/madh"
                android:textColor="#ED2A1C"
                android:textSize="20dp" />
            <TextView
                android:singleLine="false"
                android:id="@+id/tvtensanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textColor="#000"
                android:textSize="17dp"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                android:drawablePadding="5dp"
                />
            <TextView
                android:id="@+id/tvsdtCuaHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sodienthoaicuahang"
                android:textColor="#000"
                android:textSize="17dp"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                android:drawablePadding="5dp"
                />

            <TextView
                android:id="@+id/tvDiaChiCuaHang"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/diachicuahang"
                android:textColor="#000"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tvDiaChiNguoiNhan"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/diachinguoinhan"
                android:textColor="#000"
                android:textSize="17dp" />
            <TextView
                android:id="@+id/tvTongDon"
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tongdon"
                android:textColor="#000"
                android:textSize="23dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>